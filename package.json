{
  "name": "psychscribe",
  "version": "1.0.0",
  "description": "A desktop application for solo psychiatrists that accurately transcribes clinical dictation locally, optimised for psychiatric medication terminology.",
  "main": "src/main.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --watch src --exec 'electron .'",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marchatton/doctor-dictate.git"
  },
  "keywords": ["psychiatry", "dictation", "transcription", "whisper", "electron", "medical"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/marchatton/doctor-dictate/issues"
  },
  "homepage": "https://github.com/marchatton/doctor-dictate#readme",
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^25.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "pdfkit": "^0.14.0",
    "whisper-node": "^0.1.0"
  },
  "build": {
    "appId": "com.psychscribe.app",
    "productName": "PsychScribe",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.medical",
      "target": "dmg"
    }
  }
}
