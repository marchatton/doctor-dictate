{
  "name": "doctor-dictate",
  "version": "1.0.0",
  "description": "A desktop application for medical professionals that accurately transcribes clinical dictation locally, optimized for medical terminology.",
  "main": "src/main.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --watch src --exec 'electron .'",
    "build": "electron-builder",
    "build:css": "echo 'CSS already built manually'",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marchatton/doctor-dictate.git"
  },
  "keywords": [
    "medical",
    "dictation",
    "transcription",
    "whisper",
    "electron",
    "healthcare"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/marchatton/doctor-dictate/issues"
  },
  "homepage": "https://github.com/marchatton/doctor-dictate#readme",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "electron": "^37.3.1",
    "electron-builder": "^25.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.542.0",
    "pdfkit": "^0.14.0",
    "tailwind-merge": "^3.3.1",
    "whisper-node": "^0.1.0"
  },
  "build": {
    "appId": "com.doctordictate.app",
    "productName": "DoctorDictate",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.medical",
      "target": "dmg"
    }
  }
}
